{
	"extends": "eslint:recommended",
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"comma-dangle": ["error", "always"],
        "no-cond-assign": ["error", "always"]
	},
	"parserOptions": {
		"ecmaVersion": 3
	},
	"env": {
		"browser": true
	}
}